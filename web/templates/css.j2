body {
    font-family: "Goudy Old Style", "Palatino Linotype", serif;
    background-color: #f4e4c3;
    margin: 0;
    padding: 20px;
    text-align: center;
}

h1 {
    color: #5a3e1b;
    font-size: 2.5em;
    font-weight: bold;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    border-bottom: 3px solid #7d5a3b;
    display: inline-block;
    padding-bottom: 5px;
}

p {
    color: #3e2a14;
    font-size: 1.3em;
    font-style: italic;
    max-width: 600px;
    margin: 10px auto;
}

body::before {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.6;
    z-index: -1;
}
